<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="btnStyle" TargetType="Button">
        <Style.Setters>
            <Setter Property="Background" Value="BlanchedAlmond"></Setter>
            <Setter Property="Foreground" Value="Black"></Setter>
            <Setter Property="FontFamily" Value="Arial"></Setter>
            <Setter Property="FontSize" Value="46"></Setter>
            <Setter Property="Margin" Value="5 10"></Setter>
        </Style.Setters>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Foreground" Value="DeepSkyBlue"></Setter>
                <Setter Property="FontSize" Value="55"></Setter>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>